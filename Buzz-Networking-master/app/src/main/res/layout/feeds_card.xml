    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            fresco:fadeDuration="600"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/user"
            fresco:roundingBorderWidth="1dp"
            android:layout_gravity="center_vertical"
            fresco:roundingBorderColor="#3DBDFF"
            android:layout_height="40dp"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/add_photo"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <exodiasolutions.buzz.Custom.TV_normaltext
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Sunny Narang" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-12-1997 23:12:22"
                android:textSize="12sp"
                android:id="@+id/date"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BFBFBF"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <exodiasolutions.buzz.Custom.TV_normaltext
            android:layout_width="wrap_content"
            android:id="@+id/status"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:text="This is my new Post Hello Guys.. :P"
            android:layout_height="wrap_content" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            fresco:fadeDuration="600"

            app:srcCompat="@drawable/user"
            fresco:roundingBorderWidth="1dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            fresco:roundingBorderColor="#3DBDFF"
            android:layout_height="400dp"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/add_photo"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="2 Likes"
                    android:id="@+id/likes"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="2 Comments"
                    android:id="@+id/comments"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#BFBFBF"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/like_ll"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/like"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Like"
                    android:id="@+id/liked"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#BFBFBF"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/comment_ll"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Comment"
                    android:id="@+id/addcomments"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
