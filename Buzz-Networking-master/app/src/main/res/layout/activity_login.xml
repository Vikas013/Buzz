<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

    <exodiasolutions.buzz.Custom.TV_heading
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:text="LOGIN"
        android:id="@+id/login"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20sp"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/login"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:id="@+id/userupper"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">

        <exodiasolutions.buzz.Custom.CEditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Username"
            android:layout_marginTop="20sp"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:text="sunny" />
    </android.support.design.widget.TextInputLayout><android.support.design.widget.TextInputLayout
    android:layout_below="@id/userupper"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:id="@+id/passupper"
    android:layout_marginRight="20dp"
    android:layout_height="wrap_content">

    <exodiasolutions.buzz.Custom.CEditText
        
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:text="sunny" />
</android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"

        android:text="LOGIN"
        android:onClick="login"
        android:layout_below="@id/passupper"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        />

    <exodiasolutions.buzz.Custom.TV_handwritting
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register?"
        android:onClick="register"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        />




</RelativeLayout>
